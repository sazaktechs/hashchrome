{
  "manifest_version": 3,
  "name": "HashChrome: Instant, private, multilingual grammar checker",
  "version": "2.1.0",
  "description": "Instantly enhance your WhatsApp & Slack chats with private, secure, multilingual grammar checking powered by ChatGPT & Gemini.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "commands"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "proofread": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Trigger the Proofread command"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}